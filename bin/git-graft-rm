#!/bin/bash
set -o errexit

if [[ -z "$1" ]]; then
  THIS_SCRIPT=$'\u001b[1m'"$(basename $0)"$'\u001b[0m'
  echo "Usage: $THIS_SCRIPT topic_branch [commit_grafted]"
  exit 1
fi

TOPIC_BRANCH=$1
COMMIT=$2
if [[ -z "$COMMIT" ]]; then
    COMMIT="HEAD"
fi

TREE=$(git rev-parse $COMMIT^{tree})

for H in $(git rev-list $TOPIC_BRANCH ^$COMMIT); do
    if [[ "$TREE" == "$(git rev-parse $H^{tree})" ]]; then
        if git show-ref refs/replace/$H > /dev/null; then
            git replace -d $H            
        fi
    fi
done

